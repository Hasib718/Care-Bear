<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient.SignUpActivityForPatient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/patientImage"
                android:layout_gravity="center"
                android:src="@drawable/bear"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Touch The bear for\nUploading your Photo"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/patientFullNameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your sex"
            android:textColor="#1C4295"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12.25dp"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:id="@+id/idSexCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <CheckBox
                android:id="@+id/idCheckMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="15sp"
                android:layout_marginRight="20dp"
                />

            <CheckBox
                android:id="@+id/idCheckFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+88"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/patientMobileNoTextId"
                android:hint="Mobile No."
                android:inputType="text|number"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/patientPresentAddressId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Present Address"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />


        <EditText
            android:id="@+id/idPatientEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <EditText
            android:id="@+id/idPatientPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signUpButtonForPatientId"
            android:background="@color/Bisque"
            android:text="Sign Up"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signInTextView"
            android:text="Have an account?"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/signInButtonForPatientId"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="Sign In"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>