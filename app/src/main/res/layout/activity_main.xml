<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/icon_red"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Care Bear"
        android:textColor="#97103D"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In a way of Healthiness"
        android:textColor="#272830"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginBottom="50dp"/>


    <Button
        android:id="@+id/signInOrUpButtonForPatientId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:drawableLeft="@drawable/patient"
        android:background="@drawable/button_reshape"
        android:text="Sign In or Up\nAs a Patient"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/signInOrUpButtonForDoctorId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:background="@drawable/button_reshape"
        android:drawableLeft="@drawable/doctor"
        android:text="Sign In or Up\nAs a Doctor"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/emergencyButtonId"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/button_reshape"
        android:backgroundTint="@color/Brown"
        android:padding="10sp"
        android:text="Emergency (Ambulance)"
        android:textAllCaps="false"
        android:textColor="#F1EFF4"
        android:textSize="16sp" />

</LinearLayout>